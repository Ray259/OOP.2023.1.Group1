<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <ImageView fx:id="imageView" fitHeight="226.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true" GridPane.rowSpan="2" />
      <VBox alignment="BOTTOM_LEFT" spacing="50.0" GridPane.columnIndex="1" GridPane.rowSpan="2">
         <children>
            <Label fx:id="label1" alignment="CENTER" prefHeight="21.0" prefWidth="55.0" style="-fx-background-color: #2bcde4; -fx-background-radius: 20;" text="Label" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label fx:id="label2" alignment="CENTER" prefHeight="21.0" prefWidth="55.0" style="-fx-background-color: #2bcde4; -fx-background-radius: 20;" text="Label" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
         <GridPane.margin>
            <Insets bottom="50.0" left="15.0" />
         </GridPane.margin>
      </VBox>
      <VBox alignment="BOTTOM_LEFT" spacing="15.0" GridPane.columnIndex="2" GridPane.rowSpan="2">
         <children>
            <Label fx:id="title" text="Label" wrapText="true">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="time" text="Label" wrapText="true">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Label fx:id="article" text="Label" />
         </children>
         <GridPane.margin>
            <Insets bottom="50.0" left="20.0" />
         </GridPane.margin>
      </VBox>
      <Label fx:id="link" text="Label" wrapText="true" GridPane.columnSpan="3" GridPane.rowIndex="2" />
   </children>
</GridPane>
